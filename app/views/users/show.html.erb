<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>

<%= render 'follow_form' if user_signed_in? %>
<%= render 'shared/stats' %>

<div>
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
</div>
