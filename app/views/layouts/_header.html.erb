<%# invoked with: render 'layouts/header' %>
<header>
  <div class="navbar">
    <div class="container">
      <%= link_to "Tasks", "#", id: "logo" %>
      <nav class="top-bar hide-for-small" data-topbar>
        <section class="top-bar-section">
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to 'About', about_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="has-dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="carret"></b>
              </a>
              <ul class="dropdown">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", destroy_user_session_path, method: "delete", :class => 'navbar-link' %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Create Account", new_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %></li>
          <% end %>
        </ul>
      </section>
      </nav>
      <nav class="top-bar show-for-small">
        <a class="left-off-canvas-toggle menu-icon">
          <span>Tasks</span>
        </a>
      </nav>
    </div>
  </div>
</header>
